.page {
  min-width: 1100px;
  /* мы ещё не умеем делать мобильную версию сайта, */
  /* поэтому выше установлена минимальная ширина страницы */
  max-width: 1600px;
  /* выше установили ограничение по максимальной ширине */
  margin: 0 auto;
  /* выше для экранов больше 1600px отцентрировали весь контент */
  font-family: "Helvetica Neue", "Arial", sans-serif;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  min-height: 600px;
  max-height: 756px;
  width: 100vw;
  /* выше установили ограничения для секции */
  position: relative;
}

.logo {
  background-image: url(../images/logo_place_header.svg);
  height: 32px;
  width: 228px;

}

.logo_place-header {
  position: absolute;
  left: 64px;
  top: 30px;
  z-index: 1;
}

.header__title {
  position: relative;
  align-self: center;
  left: 64px;
  z-index: 1;
  font-size: 102px;
  line-height: 96px;
  width: 730px;
  font-weight: 600;
}

.header__subtitle {
  width: 388px;
  position: absolute;
  bottom: 30px;
  left: 64px;
  z-index: 1;
  font-size: 18px;
  line-height: 25px;
  font-weight: normal;
}

.header__main-illustration {
  background-image: url(../images/header-image.png);
  background-size: cover;
  height: 608px;
  width: 765px;
  position: absolute;
  bottom: 0px;
  right: 0px;
}

.header__square-pic {
  position: absolute;
  right: 0px;
  top: 64px;
  height: 568px;
  width: 568px;
  background-color: #2f80ed;
  z-index: -1;
}

.flex-column {
  display: flex;
  justify-content: space-around;
}

.main {
  display: flex;
  position: relative;
  justify-content: center;
}

.description {
  display: flex;
  justify-content: center;
  margin: 100px 0px;

}

.two-columns {
  width: 80%;
  display: flex;
  justify-content: space-between;
}

.two-columns__brief {
  width: 175px;
  color: #2f80ed;
  font-size: 18px;
  line-height: 1.2;
  font-weight: normal;

}

.two-columns__main-text {
  display: flex;
  flex-direction: column;
  width: 80%;
  min-width: 784px;
}

.two-columns__paragraph {
  margin: 15px 0px;
  font-size: 24px;
  line-height: 34px;
  font-weight: normal;
}


.two-columns__span {
  font-size: 24px;
  line-height: 34px;
  font-weight: 600;
}


.section-title {
  margin-top: 100px;
  font-size: 60px;
  line-height: 1.15;
  font-weight: 600;
  margin-left: auto;
  margin-right: auto;
}

.section-subtitle {
  margin-top: 20px;
  font-size: 24px;
  line-height: 34px;
  font-weight: 600;
}

.digits {
  display: flex;
  flex-flow: column;
  justify-content: center;
}

.table {
  display: flex;
  width: 1100px;
  flex-flow: column wrap;
}

.table__row {
  display: flex;
  flex-flow: row;
  margin: top 60px;
}

/* и элемента с модификатором вида ключ-значение */
.table__cell_theme_dark-side {
  width: 200px;
  color: white;
  margin-right: 0;
  margin-top: 80px;
}

.table__cell_theme_white-side {
  width: 250px;
  color: #000;
  margin-right: 0;
  margin-top: 60px;
}
